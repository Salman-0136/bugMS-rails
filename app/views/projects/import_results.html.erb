<% result = @result || { success_count: 0, failures: [] } %>

<p class="mb-4 text-gray-700">
  Successfully imported <strong class="text-green-500"><%= result[:success_count] %></strong> projects.
</p>

<% if result[:failures].any? %>
  <div class="mb-4 p-4 bg-red-50 border border-red-400 rounded-lg">
    <h3 class="font-semibold text-red-700 mb-2">Failed Rows:</h3>
    <ul class="list-disc pl-5 text-red-600">
      <% result[:failures].each do |f| %>
        <li><%= f %></li>
      <% end %>
    </ul>
  </div>
<% else %>
  <p class="text-green-700 font-medium">No errors occurred. All rows imported successfully!</p>
<% end %>
