<div class="max-w-7xl mx-auto mt-6 px-4">

  <h1 class="text-3xl font-bold text-purple-700 mb-6">Search Results for "<%= params[:q] %>"</h1>

  <% if @projects&.any? %>
  <h2 class="text-xl font-semibold text-purple-700 mt-4">Projects</h2>
  <ul class="list-disc pl-6">
    <% @projects.each do |project| %>
    <li><%= link_to project.name, project_path(project), class: "text-blue-600 hover:underline" %></li>
    <% end %>
  </ul>
  <% end %>

  <% if @users&.any? %>
  <h2 class="text-xl font-semibold text-green-700 mt-4">Users</h2>
  <ul class="list-disc pl-6">
    <% @users.each do |user| %>
    <li><%= link_to user.name, user_path(user), class: "text-blue-600 hover:underline" %></li>
    <% end %>
  </ul>
  <% end %>

  <% if @bugs&.any? %>
  <h2 class="text-xl font-semibold text-red-700 mt-4">Bugs</h2>
  <ul class="list-disc pl-6">
    <% @bugs.each do |bug| %>
    <li><%= link_to bug.title, bug_path(bug), class: "text-blue-600 hover:underline" %></li>
    <% end %>
  </ul>
  <% end %>

  <% if @comments.present? %>
  <h2 class="text-xl font-semibold mt-6">Comments</h2>
  <ul class="list-disc pl-6">
    <% @comments.each do |comment| %>
    <li>
      <%= truncate(comment.content, length: 80) %> â€”
      <%= link_to comment.bug.title, bug_path(comment.bug), class: "text-blue-600 hover:underline" %>
    </li>
    <% end %>
  </ul>
  <% end %>


  <% if [@projects, @users, @bugs, @comments].all?(&:blank?) %>
  <p class="text-gray-500">No results found.</p>
  <% end %>

</div>