<div class="w-full max-w-6xl mx-auto mt-16 bg-white p-10 rounded-2xl shadow-lg flex flex-col md:flex-row items-center gap-8">

  <!-- Illustration -->
  <div class="md:w-1/2 flex justify-center">
    <%= image_tag "login.jpg",
          alt: "Login Illustration",
          class: "w-[400px] h-[500px] md:w-[500px] md:h-[600px] object-contain rounded-xl shadow-lg" %>
  </div>

  <!-- Login Form -->
  <div class="md:w-1/2 w-full flex justify-center">
    <div class="w-full max-w-xl">
      <h2 class="text-3xl font-bold mb-6 text-purple-700 text-center md:text-left">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "bg-white rounded-2xl w-full p-10 shadow-lg" }) do |f| %>

        <%= render "shared/errors", object: resource %>

        <div class="grid grid-cols-1 gap-6">

          <!-- Email -->
          <div class="relative">
            <%= f.label :email, class: "block text-gray-700 font-medium mb-1" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",
                  class: "w-full pl-10 px-3 py-4 border rounded-lg focus:ring-2 focus:ring-purple-400 focus:border-transparent outline-none transition",
                  placeholder: "Enter your email" %>
            <i class="fas fa-envelope absolute left-3 top-12 text-gray-400"></i>
          </div>

          <!-- Password -->
          <div class="relative">
            <%= f.label :password, class: "block text-gray-700 font-medium mb-1" %>
            <%= f.password_field :password, autocomplete: "current-password",
                  class: "w-full pl-10 px-3 py-4 border rounded-lg focus:ring-2 focus:ring-purple-400 focus:border-transparent outline-none transition",
                  placeholder: "Enter your password" %>
            <i class="fas fa-lock absolute left-3 top-13 text-gray-400"></i>
          </div>

          <!-- Remember Me -->
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center gap-2">
              <%= f.check_box :remember_me, class: "w-4 h-4 text-purple-600 border-gray-300 rounded focus:ring-purple-400" %>
              <%= f.label :remember_me, class: "text-gray-700 font-medium" %>
            </div>
          <% end %>

          <!-- Submit Button -->
          <div class="flex justify-center mt-6">
            <%= f.submit "Log in",
                  class: "bg-purple-600 hover:bg-purple-700 text-white px-12 py-4 rounded-2xl font-semibold text-lg shadow-lg transition transform hover:-translate-y-1" %>
          </div>

        </div>
      <% end %>

      <!-- Signup / Forgot Password Links -->
      <div class="mt-6 text-center text-gray-600">
        Don't have an account?
        <%= link_to "Sign Up", new_user_registration_path, class: "text-purple-600 font-semibold hover:text-purple-700" %>
        <br>
        <%= link_to "Forgot your password?", new_user_password_path, class: "text-gray-500 hover:text-purple-600 font-medium" %>
      </div>

    </div>
  </div>
</div>
