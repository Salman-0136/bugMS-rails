<div class="w-full flex justify-center mt-6 mb-8">
  <%= form_with url: search_path, method: :get, local: true, class: "w-full sm:w-1/2 flex flex-col sm:flex-row gap-2" do |f| %>
    
    <!-- Search Input -->
    <%= f.text_field :q, value: params[:q], placeholder: "Search projects, users, bugs, comments...", 
          class: "border rounded-xl px-4 py-2 w-full shadow focus:ring-2 focus:ring-purple-300" %>

    <!-- Optional Submit Button -->
    <%= f.submit "Search", class: "bg-purple-600 hover:bg-purple-700 text-white px-6 py-2 rounded-xl shadow transition" %>

  <% end %>
</div>
