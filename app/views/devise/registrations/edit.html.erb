<div class="max-w-4xl mx-auto mt-16 bg-white p-10 rounded-2xl shadow-lg flex flex-col md:flex-row gap-8">

  <!-- Illustration -->
  <div class="md:w-1/2 flex justify-center">
    <%= image_tag "signup-illus.png", class: "w-80 h-96 object-contain rounded-xl shadow-lg", alt: "Profile Illustration" %>
  </div>

  <!-- Profile Form -->
  <div class="md:w-1/2 w-full">
    <h2 class="text-3xl font-bold text-purple-700 mb-6">Edit Profile</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true, class: "space-y-4" }) do |f| %>
      <%= render "shared/errors", object: resource %>

      <!-- Name -->
      <div>
        <%= f.label :name, class: "block font-medium mb-1" %>
        <%= f.text_field :name, class: "w-full px-3 py-2 border rounded-lg", placeholder: "Your Name" %>
      </div>

      <!-- Profile Picture -->
      <div>
        <%= f.label :profile_image, "Profile Picture", class: "block font-medium mb-1" %>
        <%= f.file_field :profile_image, class: "w-full px-3 py-2 border rounded-lg" %>
        <% if resource.profile_image.attached? %>
          <div class="mt-2">
            <%= image_tag resource.profile_image.variant(resize_to_limit: [150, 150]), class: "rounded-full" %>
          </div>
        <% end %>
      </div>

      <!-- Role (read-only for normal users) -->
      <div>
        <%= f.label :role, class: "block font-medium mb-1" %>
        <%= f.text_field :role, value: resource.role, disabled: true, class: "w-full px-3 py-2 border rounded-lg bg-gray-100 cursor-not-allowed" %>
      </div>

      <!-- Submit -->
      <div class="mt-4">
        <%= f.submit "Update Profile", class: "bg-purple-600 hover:bg-purple-700 text-white px-6 py-3 rounded-xl font-semibold" %>
      </div>
    <% end %>

    <!-- Security Buttons -->
    <div class="mt-8 space-y-2">
      <%= link_to "Change Password", edit_user_registration_path(anchor: "change_password"), class: "block bg-gray-100 px-6 py-3 rounded-lg hover:bg-gray-200 text-center" %>
      <%= link_to "Change Email", edit_user_registration_path(anchor: "change_email"), class: "block bg-gray-100 px-6 py-3 rounded-lg hover:bg-gray-200 text-center" %>
      <%= link_to "Forgot Password?", new_user_password_path, class: "block text-purple-600 hover:text-purple-700 text-center mt-2" %>
    </div>

    <!-- Cancel Account -->
    <div class="mt-6 text-center">
      <%= button_to "Cancel my account", registration_path(resource_name), method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded-lg" %>
    </div>
  </div>
</div>
