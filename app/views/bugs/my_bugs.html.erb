<h1 class="text-3xl font-bold mb-8 text-gray-800">My Bugs</h1>

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @bugs.each do |bug| %>
    <div class="bg-white shadow-lg rounded-2xl p-6 hover:shadow-xl transition-shadow">
      <!-- Bug Title & Priority -->
      <div class="flex justify-between items-start mb-4">
        <h2 class="text-xl font-semibold text-gray-800"><%= bug.title %></h2>
        <span class="px-3 py-1 text-sm font-medium rounded-full <%= bug.priority == 'high' ? 'bg-red-100 text-red-600' : bug.priority == 'medium' ? 'bg-yellow-100 text-yellow-600' : 'bg-green-100 text-green-600' %>">
          <%= bug.priority.capitalize %>
        </span>
      </div>

      <!-- Status & Due Date -->
      <div class="flex justify-between items-center mb-4">
        <span class="text-sm font-medium <%= bug.status == 'open' ? 'text-blue-600' : bug.status == 'in_progress' ? 'text-yellow-500' : 'text-gray-500' %> capitalize">
          <%= bug.status.humanize %>
        </span>
        <span class="text-sm text-gray-500">
          Due: <%= bug.due_date&.strftime("%d %b %Y") || "N/A" %>
        </span>
      </div>

      <!-- Actions -->
      <div class="flex justify-between mt-4">
        <%= link_to "View", bug_path(bug), class: "text-blue-600 hover:underline font-medium" %>
        <%= link_to "Edit", edit_bug_path(bug), class: "text-yellow-500 hover:underline font-medium" %>
        <%= link_to "Delete", bug_path(bug), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500 hover:underline font-medium" %>
      </div>
    </div>
  <% end %>
</div>

<% if @bugs.empty? %>
  <p class="text-gray-500 text-center mt-12">You have no bugs assigned yet.</p>
<% end %>
