<div class="w-full px-6 md:px-12 lg:px-20 py-8 bg-gray-50 min-h-screen">
  <!-- Page Header -->
  <header class="mb-12 text-center">
    <h1 class="text-4xl font-extrabold text-gray-800">All Bugs</h1>
    <p class="text-gray-500 mt-2 text-lg">Track all bugs here. Click on a bug to see details or update its status.</p>
  </header>

  <div class="flex justify-end mt-auto mb-5 mx-2 gap-4">
    <% if can? :import, :Bugs %>
    <%= link_to "Import Bugs", import_bugs_page_path, class: "bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-lg font-medium transition" %>
    <% end %>
    <% if can? :export, :Bugs %>
    <%= link_to "Export Bugs CSV", export_bugs_path, class: "bg-yellow-400 hover:bg-yellow-500 text-white px-4 py-2 rounded-lg font-medium transition" %>
    <% end %>
    <%= link_to "Download Export", download_export_bugs_path, class: "bg-blue-400 hover:bg-blue-500 text-white px-4 py-2 rounded-lg font-medium transition" %>
  </div>

  <!-- Bugs Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <% @bugs.each do |bug| %>
      <div class="bg-white shadow-md rounded-2xl p-6 hover:shadow-xl transition-all duration-300 border-l-4
        <%= 'border-red-500' if bug.priority == 'high' %>
        <%= 'border-yellow-400' if bug.priority == 'medium' %>
        <%= 'border-green-400' if bug.priority == 'low' %>
      ">
        <!-- Title & Priority -->
        <div class="flex justify-between items-start mb-3">
          <h2 class="text-xl font-semibold text-gray-800"><%= bug.title %></h2>
          <span class="px-3 py-1 rounded-full text-xs font-medium
            <%= 'bg-red-100 text-red-700' if bug.priority == 'high' %>
            <%= 'bg-yellow-100 text-yellow-800' if bug.priority == 'medium' %>
            <%= 'bg-green-100 text-green-700' if bug.priority == 'low' %>">
            <%= bug.priority.capitalize %>
          </span>
        </div>

        <!-- Description -->
        <p class="text-gray-600 mb-4 line-clamp-3">
          <%= bug.description %>
        </p>

        <!-- Status & Due Date -->
        <div class="flex justify-between items-center text-sm mb-4">
          <span>
            Status:
            <span class="font-semibold
              <%= 'text-green-600' if bug.status == 'closed' %>
              <%= 'text-blue-600' if bug.status == 'reopened' %>
              <%= 'text-red-600' if bug.status == 'open' %>">
              <%= bug.status.humanize %>
            </span>
          </span>
          <span class="text-gray-700 font-medium">Due: <%= bug.due_date&.strftime("%d %b %Y") %></span>
        </div>

        <!-- Project Manager -->
        <div class="flex flex-wrap gap-2 mb-4">
          <p class="text-sm font-semi-bold mt-1">Project Manager</p>
          <span class="bg-gray-100 text-gray-800 px-2 py-1 rounded-full text-xs font-medium"><%= bug.project.manager&.name %></span>
        </div>

        <!-- Project Assigned Users -->
        <div class="flex flex-wrap gap-2 mb-4">
          <p class="text-sm font-semi-bold mt-1">Project Assignees</p>
          <% bug.project.assigned_users.each do |user| %>
            <span class="bg-gray-100 text-gray-800 px-2 py-1 rounded-full text-xs font-medium"><%= user.name %></span>
          <% end %>
        </div>

        <!-- Bug Assigned Users -->
        <div class="flex flex-wrap gap-2 mb-4">
          <p class="text-sm font-semi-bold mt-1">Bug Assignees</p>
          <% bug.users.each do |user| %>
            <span class="bg-gray-100 text-gray-800 px-2 py-1 rounded-full text-xs font-medium"><%= user.name %></span>
          <% end %>
        </div>

        <!-- View Button Only -->
        <div class="flex justify-end mt-auto">
          <% if can? :read, bug %>
            <%= link_to "View", bug_path(bug), class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg font-medium transition" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="mt-6">
    <%= render "kaminari/paginator", collection: @bugs %>
  </div>
</div>
