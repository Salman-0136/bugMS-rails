<div class="max-w-md mx-auto mt-20 bg-white p-8 rounded-xl shadow-lg">
  <h1 class="text-2xl font-bold mb-6 text-center">Sign Up</h1>

  <%= form_with model: @user, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :name, class: "block text-gray-700" %>
      <%= f.text_field :name, class: "w-full px-3 py-2 border rounded-lg" %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700" %>
      <%= f.email_field :email, class: "w-full px-3 py-2 border rounded-lg" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700" %>
      <%= f.password_field :password, class: "w-full px-3 py-2 border rounded-lg" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block text-gray-700" %>
      <%= f.password_field :password_confirmation, class: "w-full px-3 py-2 border rounded-lg" %>
    </div>

    <div class="text-center">
      <%= f.submit "Sign Up", class: "bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded-lg font-semibold" %>
    </div>
  <% end %>
</div>
