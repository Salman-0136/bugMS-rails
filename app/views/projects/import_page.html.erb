<div class="min-h-screen flex flex-col items-center justify-center my-5 p-6">
  <!-- Page Header -->
  <div class="text-center mb-8">
    <h1 class="text-3xl font-bold text-gray-800">Import Projects from CSV</h1>
    <p class="text-gray-500 mt-2">Upload a CSV file to quickly add multiple projects to the system</p>
  </div>

  <% if @success_count.present? %>
    <div class="p-4">
      <p>
        Imported: 
        <span class="text-green-600">
          <%= @success_count %>
        </span>
      </p>
      <p>
        Failed: 
        <span class="text-red-600">
          <%= @failure_count %>
        </span>
      <p>

      <% if @failure_count > 0 %>
        <%= link_to "Download Error CSV",
            download_import_errors_projects_path(file: @error_file),
            class: "underline text-red-600 font-semibold" %>
      <% end %>
    </div>
  <% end %>

  <!-- Form Card -->
  <%= form_with model: @project, url: import_projects_path, local: true, html: { class: "w-full max-w-lg bg-white p-8 rounded-2xl shadow-lg space-y-6 border border-gray-200 mt-8" } do |form| %>

    <div>
      <%= form.label :file, "Choose CSV File",
          class: "block text-sm font-medium text-gray-700 mb-2" %>

      <%= form.file_field :file,
          accept: ".csv",
          class: "block w-full text-sm text-gray-600
                  file:mr-4 file:py-2 file:px-4
                  file:rounded-lg file:border-0
                  file:text-sm file:font-semibold
                  file:bg-purple-50 file:text-purple-700
                  hover:file:bg-purple-100
                  border border-gray-300 rounded-lg
                  focus:outline-none focus:ring-2 focus:ring-purple-500
                  transition" %>

      <p class="mt-2 text-xs text-gray-500">
        Only CSV files are allowed. Make sure your file has headers: <span class="font-medium">name, description, manager_id</span> etc.
      </p>
    </div>

    <div class="flex justify-end">
      <%= form.submit "Import Projects",
          class: "inline-flex items-center px-6 py-2
                  bg-purple-600 text-white text-sm font-semibold
                  rounded-lg shadow
                  hover:bg-purple-700
                  focus:outline-none focus:ring-2 focus:ring-purple-500
                  transition" %>
    </div>
  <% end %>

  <!-- Optional Illustration / Accent -->
<div class="mt-12 text-center">
  <%= image_tag "import-illus.jpg",
      alt: "Import Projects Illustration",
      class: "mx-auto w-80 h-80 sm:w-48 sm:h-36 md:w-56 md:h-40 object-contain opacity-90" %>
  <p class="mt-4 text-gray-400 text-sm">Drag and drop CSV support coming soon!</p>
</div>

</div>
