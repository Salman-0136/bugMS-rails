<div class="w-full max-w-4xl mx-auto mt-16 bg-white p-10 rounded-2xl shadow-lg flex flex-col md:flex-row items-center gap-8">

  <!-- Illustration -->
  <div class="md:w-1/2 flex justify-center">
    <%= image_tag "unlock.jpg",
          alt: "Unlock Instructions Illustration",
          class: "w-[300px] h-[400px] md:w-[400px] md:h-[500px] object-contain rounded-xl shadow-lg" %>
  </div>

  <!-- Resend Unlock Form -->
  <div class="md:w-1/2 w-full flex justify-center">
    <div class="w-full max-w-lg">
      <h2 class="text-3xl font-bold mb-6 text-purple-700 text-center md:text-left">
        Resend Unlock Instructions
      </h2>

      <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: "bg-white rounded-2xl w-full p-10 shadow-lg" }) do |f| %>

        <%= render 'shared/errors', object: resource %>

        <div class="grid grid-cols-1 gap-6">

          <!-- Email -->
          <div class="relative">
            <%= f.label :email, class: "block text-gray-700 font-medium mb-1" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",
                  class: "w-full pl-10 px-3 py-4 border rounded-lg focus:ring-2 focus:ring-purple-400 focus:border-transparent outline-none transition",
                  placeholder: "Enter your email" %>
            <i class="fas fa-envelope absolute left-3 top-12 text-gray-400"></i>
          </div>

          <!-- Submit Button -->
          <div class="flex justify-center mt-6">
            <%= f.submit "Resend unlock instructions",
                  class: "bg-purple-600 hover:bg-purple-700 text-white px-12 py-4 rounded-2xl font-semibold text-lg shadow-lg transition transform hover:-translate-y-1" %>
          </div>

        </div>

      <% end %>

      <!-- Back to login link -->
      <p class="mt-6 text-center text-gray-600">
        Remembered your password?
        <%= link_to "Log in", new_user_session_path, class: "text-purple-600 font-semibold hover:text-purple-700" %>
      </p>

    </div>
  </div>
</div>
