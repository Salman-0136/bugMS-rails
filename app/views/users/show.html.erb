<div class="max-w-2xl mx-auto mt-16 bg-white p-8 rounded-xl shadow-lg">
  <h1 class="text-3xl font-bold mb-4 text-purple-700"><%= @user.name %></h1>
  <p class="text-gray-700 mb-6"><strong>Email:</strong> <%= @user.email %></p>
  <p class="text-gray-700 mb-6"><strong>Role:</strong> 
    <% if @user.admin? %>
      <span class="bg-green-100 text-green-700 px-2 py-1 rounded-full text-xs font-semibold">Admin</span>
    <% else %>
      <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded-full text-xs font-semibold">User</span>
    <% end %>
  </p>

  <div class="flex gap-4">
    <% if current_user == @user || admin? %>
      <%= link_to "Edit Profile", edit_user_path(@user), class: "bg-yellow-400 hover:bg-yellow-500 text-white px-6 py-2 rounded-lg font-semibold" %>
    <% end %>
    <%= link_to "Back", users_path, class: "bg-purple-600 hover:bg-purple-700 text-white px-6 py-2 rounded-lg font-semibold" %>
  </div>
</div>
