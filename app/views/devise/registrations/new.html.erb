<div class="w-full max-w-6xl mx-auto mt-16 bg-white p-10 rounded-2xl shadow-lg flex flex-col md:flex-row items-center gap-8">

  <!-- Illustration -->
  <div class="md:w-1/2 flex justify-center">
    <%= image_tag "signup-illus.png",
          alt: "Sign Up Illustration",
          class: "w-[300px] h-[400px] md:w-[400px] md:h-[500px] object-contain rounded-xl shadow-lg" %>
  </div>

  <!-- Sign Up Form -->
  <div class="md:w-1/2 w-full flex justify-center">
    <div class="w-full max-w-lg">
      <h2 class="text-3xl font-bold mb-6 text-purple-700 text-center md:text-left">Sign Up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "bg-white rounded-2xl w-full p-10 shadow-lg" }) do |f| %>
        <%= render "shared/errors", object: resource %>
        <!-- Name -->
        <div class="mb-4">
          <%= f.label :name, class: "block text-gray-700 font-medium mb-1" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name",
                class: "w-full px-3 py-4 border rounded-lg focus:ring-2 focus:ring-purple-400 focus:border-transparent outline-none transition",
                placeholder: "Enter your full name" %>
        </div>

        <!-- Email -->
        <div class="mb-4">
          <%= f.label :email, class: "block text-gray-700 font-medium mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
                class: "w-full px-3 py-4 border rounded-lg focus:ring-2 focus:ring-purple-400 focus:border-transparent outline-none transition",
                placeholder: "Enter your email" %>
        </div>

        <!-- Password -->
        <div class="mb-4">
          <%= f.label :password, class: "block text-gray-700 font-medium mb-1" %>
          <% if @minimum_password_length %>
            <em class="text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password",
                class: "w-full px-3 py-4 border rounded-lg focus:ring-2 focus:ring-purple-400 focus:border-transparent outline-none transition",
                placeholder: "Enter your password" %>
        </div>

        <!-- Password Confirmation -->
        <div class="mb-4">
          <%= f.label :password_confirmation, class: "block text-gray-700 font-medium mb-1" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
                class: "w-full px-3 py-4 border rounded-lg focus:ring-2 focus:ring-purple-400 focus:border-transparent outline-none transition",
                placeholder: "Confirm password" %>
        </div>

        <!-- Submit -->
        <div class="flex justify-center mt-6">
          <%= f.submit "Sign Up",
                class: "bg-purple-600 hover:bg-purple-700 text-white px-12 py-4 rounded-2xl font-semibold text-lg shadow-lg transition transform hover:-translate-y-1" %>
        </div>
      <% end %>

      <!-- Login Link -->
      <p class="mt-6 text-center text-gray-600">
        Already have an account?
        <%= link_to "Login", new_user_session_path, class: "text-purple-600 font-semibold hover:text-purple-700" %>
      </p>
    </div>
  </div>
</div>
