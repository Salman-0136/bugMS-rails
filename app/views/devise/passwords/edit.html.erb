<div id="change_password" class="w-full max-w-4xl mx-auto mt-16 bg-white p-10 rounded-2xl shadow-lg flex flex-col md:flex-row items-center gap-8">

  <!-- Illustration -->
  <div class="md:w-1/2 flex justify-center">
    <%= image_tag "change-password.png",
          alt: "Change Password",
          class: "w-[300px] h-[400px] md:w-[400px] md:h-[500px] object-contain rounded-xl shadow-lg" %>
  </div>

  <!-- Change Password Form -->
  <div class="md:w-1/2 w-full flex justify-center">
    <div class="w-full max-w-lg">
      <h2 class="text-3xl font-bold mb-6 text-purple-700 text-center md:text-left">Change Your Password</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "bg-white rounded-2xl w-full p-10 shadow-lg" }) do |f| %>

        <%= render "shared/errors", object: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="grid grid-cols-1 gap-6">

          <!-- New Password -->
          <div class="relative">
            <%= f.label :password, "New password", class: "block text-gray-700 font-medium mb-1" %>
            <% if @minimum_password_length %>
              <em class="text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
                  class: "w-full pl-3 px-3 py-4 border rounded-lg focus:ring-2 focus:ring-purple-400 focus:border-transparent outline-none transition",
                  placeholder: "Enter new password" %>
          </div>

          <!-- Confirm New Password -->
          <div class="relative">
            <%= f.label :password_confirmation, "Confirm new password", class: "block text-gray-700 font-medium mb-1" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password",
                  class: "w-full pl-3 px-3 py-4 border rounded-lg focus:ring-2 focus:ring-purple-400 focus:border-transparent outline-none transition",
                  placeholder: "Confirm new password" %>
          </div>

          <!-- Submit -->
          <div class="flex justify-center mt-6">
            <%= f.submit "Change my password",
                  class: "bg-purple-600 hover:bg-purple-700 text-white px-12 py-4 rounded-2xl font-semibold text-lg shadow-lg transition transform hover:-translate-y-1" %>
          </div>

        </div>
      <% end %>

      <!-- Links -->
      <p class="mt-6 text-center text-gray-600">
        <%= link_to "Back to login", new_user_session_path, class: "text-purple-600 font-semibold hover:text-purple-700" %>
      </p>
    </div>
  </div>
</div>
