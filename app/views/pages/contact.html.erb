<div class="max-w-6xl mx-auto py-16 px-6 space-y-16">

  <div class="grid md:grid-cols-2 gap-12 items-center">

    <!-- Contact Form -->
    <div class="bg-gradient-to-r from-emerald-50 to-teal-50 rounded-3xl shadow-2xl p-10 border border-gray-200">
      
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-slate-800 mb-2">Contact Us</h1>
        <p class="text-slate-600 text-lg max-w-md mx-auto">
          Have questions, feedback, or issues? We'd love to hear from you. Fill out the form below and we'll get back to you promptly.
        </p>
      </div>

      <form class="space-y-6">

        <!-- Name -->
        <div class="relative">
          <label class="block text-slate-800 font-medium mb-1">Your Name</label>
          <input type="text" placeholder="John Doe"
                 class="w-full border border-gray-300 rounded-lg px-4 py-2 pl-10 focus:ring-2 focus:ring-emerald-400 focus:border-transparent outline-none bg-white text-slate-800">
          <span class="absolute left-3 top-9 text-gray-400">
            <i class="fas fa-user h-5 w-5"></i>
          </span>
        </div>

        <!-- Email -->
        <div class="relative">
          <label class="block text-slate-800 font-medium mb-1">Email Address</label>
          <input type="email" placeholder="example@email.com"
                 class="w-full border border-gray-300 rounded-lg px-4 py-2 pl-10 focus:ring-2 focus:ring-emerald-400 focus:border-transparent outline-none bg-white text-slate-800">
          <span class="absolute left-3 top-9 text-gray-400">
            <i class="fas fa-envelope h-5 w-5"></i>
          </span>
        </div>

        <!-- Message -->
        <div class="relative">
          <label class="block text-slate-800 font-medium mb-1">Message</label>
          <textarea rows="5" placeholder="Write your message..."
                    class="w-full border border-gray-300 rounded-lg px-4 py-2 pl-10 focus:ring-2 focus:ring-emerald-400 focus:border-transparent outline-none bg-white text-slate-800"></textarea>
          <span class="absolute left-3 top-3.5 text-gray-400">
            <i class="fas fa-comment-dots h-5 w-5 mt-7"></i>
          </span>
        </div>

        <!-- Submit Button -->
        <div class="text-center">
          <button class="bg-emerald-500 hover:bg-emerald-600 text-white px-8 py-3 rounded-xl font-semibold transition transform hover:-translate-y-1 shadow-lg">
            Send Message
          </button>
        </div>

      </form>

    </div>

    <!-- Side Image -->
    <div class="flex justify-center">
      <%= image_tag "contact.gif", alt: "Contact Us", class: "rounded-3xl shadow-xl w-full max-w-md object-cover" %>
    </div>

  </div>

  <!-- Contact Info Cards -->
  <div class="grid md:grid-cols-3 gap-6 text-center">
    <div class="bg-white p-6 rounded-2xl shadow-md border border-gray-100 hover:shadow-xl transition">
      <i class="fas fa-envelope mx-auto text-4xl mb-4 text-emerald-500"></i>
      <h3 class="text-xl font-semibold text-slate-800 mb-2">Email Us</h3>
      <p class="text-slate-600">support@bugms.com</p>
    </div>

    <div class="bg-white p-6 rounded-2xl shadow-md border border-gray-100 hover:shadow-xl transition">
      <i class="fas fa-phone mx-auto text-4xl mb-4 text-emerald-500"></i>
      <h3 class="text-xl font-semibold text-slate-800 mb-2">Call Us</h3>
      <p class="text-slate-600">+1 234 567 890</p>
    </div>

    <div class="bg-white p-6 rounded-2xl shadow-md border border-gray-100 hover:shadow-xl transition">
      <i class="fas fa-map-marker-alt mx-auto text-4xl mb-4 text-emerald-500"></i>
      <h3 class="text-xl font-semibold text-slate-800 mb-2">Visit Us</h3>
      <p class="text-slate-600">123 Bug Street, Dev City, USA</p>
    </div>
  </div>

  <!-- Social Media -->
  <div class="text-center mt-12">
    <h2 class="text-2xl font-bold text-slate-800 mb-6">Follow Us</h2>
    <div class="flex justify-center gap-6 text-gray-700 text-3xl">
      <a href="#" class="text-blue-600 hover:text-blue-800 transition"><i class="fab fa-facebook-f"></i></a>
      <a href="#" class="text-blue-400 hover:text-blue-600 transition"><i class="fab fa-twitter"></i></a>
      <a href="#" class="text-blue-700 hover:text-blue-900 transition"><i class="fab fa-linkedin-in"></i></a>
      <a href="#" class="text-black hover:text-gray-800 transition"><i class="fab fa-github"></i></a>
    </div>
  </div>

</div>
