<div class="w-full max-w-6xl mx-auto mt-16 bg-white p-10 rounded-2xl shadow-lg flex flex-col md:flex-row items-center gap-8">

  <!-- Illustration -->
  <div class="md:w-1/2 flex justify-center">
    <%= image_tag "login.jpg",
          alt: "Login Illustration",
          class: "w-[400px] h-[500px] md:w-[500px] md:h-[600px] object-contain rounded-xl shadow-lg" %>
  </div>

  <!-- Login Form -->
  <div class="md:w-1/2 w-full flex justify-center">
    <div class="w-full max-w-xl">
      <h1 class="text-3xl font-bold mb-6 text-purple-700 text-center md:text-left">Login</h1>

      <%= form_with url: login_path, method: :post, local: true,
            class: "bg-white rounded-2xl w-full p-10 shadow-lg" do %>

        <%= render 'shared/errors', object: @user %>

        <div class="grid grid-cols-1 gap-6">

          <!-- Email -->
          <div class="relative">
            <label class="block text-gray-700 font-medium mb-1">Email</label>
            <%= email_field_tag :email, nil,
                  class: "w-full pl-10 px-3 py-4 border rounded-lg focus:ring-2 focus:ring-purple-400 focus:border-transparent outline-none transition",
                  placeholder: "Enter your email" %>
            <i class="fas fa-envelope absolute left-3 top-12 text-gray-400"></i>
          </div>

          <!-- Password -->
          <div class="relative">
            <label class="block text-gray-700 font-medium mb-1">Password</label>
            <%= password_field_tag :password, nil,
                  class: "w-full pl-10 px-3 py-4 border rounded-lg focus:ring-2 focus:ring-purple-400 focus:border-transparent outline-none transition",
                  placeholder: "Enter your password" %>
            <i class="fas fa-lock absolute left-3 top-13 text-gray-400"></i>
          </div>

          <!-- Submit Button -->
          <div class="flex justify-center mt-6">
            <%= submit_tag "Login",
                  class: "bg-purple-600 hover:bg-purple-700 text-white px-12 py-4 rounded-2xl font-semibold text-lg shadow-lg transition transform hover:-translate-y-1" %>
          </div>

        </div>

      <% end %>

      <!-- Signup Link -->
      <p class="mt-6 text-center text-gray-600">
        Don't have an account?
        <%= link_to "Sign Up", signup_path, class: "text-purple-600 font-semibold hover:text-purple-700" %>
      </p>
    </div>
  </div>
</div>
